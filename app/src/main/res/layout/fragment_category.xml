<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.CategoryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_back_24"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="카테고리 및 키워드 검색"
            android:textColor="@color/topTextColor"
            android:gravity="center"
            android:textSize="20sp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="여행 시 가장 중요하게 생각하는 \n카테고리를 골라주세요"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:gravity="center"
        android:textSize="20sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/background_categoryitem"
            android:text="분위기"
            android:textColor="@color/textColor"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:gravity="center"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/background_categoryitem"
            android:layout_marginHorizontal="60dp"
            android:text="교통"
            android:textColor="@color/textColor"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:gravity="center"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/background_categoryitem"
            android:text="혼잡도"
            android:textColor="@color/textColor"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:gravity="center"
            android:textSize="20sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/background_categoryitem"
            android:text="인프라"
            android:textColor="@color/textColor"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginRight="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/background_categoryitem"
            android:text="방문목적"
            android:textColor="@color/textColor"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>

    <View
        android:id="@+id/lineCategoryFragment"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/topTextColor"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textPurposeAndKeyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="방문 목적 및 키워드를 입력하세요"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:gravity="center"
        android:textSize="20sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/inputPurposeAndKeyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:visibility="gone">

        <EditText
            android:layout_width="310dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_edittext"
            android:hint="     방문목적 및 키워드 입력"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/searchBtnInCategoryFragment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_search_24"/>
    </LinearLayout>


</LinearLayout>