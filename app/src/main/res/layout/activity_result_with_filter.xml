<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ResultWithFilterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/backgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/goBackBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="월별 필터 적용 리뷰 조회"
                android:textColor="@color/topTextColor"
                android:textAlignment="center"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/placeName"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:text="서울 송파 롯데월드"
                android:textColor="@color/textColor"/>

            <TextView
                android:id="@+id/selectedFilter"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/category_style"
                android:padding="8dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:text="1월" />
        </LinearLayout>

        <TextView
            android:layout_width="370dp"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="지도"
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="@color/topTextColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="230dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="31dp"
                    android:layout_marginEnd="30dp"
                    android:text="막\n대\n바"
                    android:background="#34A853"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/category1"
                    android:layout_width="68dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/category_style"
                    android:padding="8dp"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:text="분위기" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="230dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="31dp"
                    android:layout_marginEnd="30dp"
                    android:text="막\n대\n바"
                    android:background="#34A853"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/category2"
                    android:layout_width="68dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/category_style"
                    android:padding="8dp"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:text="교통" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="230dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="31dp"
                    android:layout_marginEnd="30dp"
                    android:text="막\n대\n바"
                    android:background="#34A853"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/category3"
                    android:layout_width="68dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/category_style"
                    android:padding="8dp"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:text="혼잡도" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="230dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="31dp"
                    android:layout_marginEnd="30dp"
                    android:text="막\n대\n바"
                    android:background="#34A853"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/category4"
                    android:layout_width="68dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/category_style"
                    android:padding="8dp"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:text="인프라" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/category5"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1.8"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/category_style"
                    android:padding="8dp"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:text="방문목적" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="6"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/textColor"
                    android:textSize="18sp"
                    android:text="산책(320), 데이트(171), 운동(103)" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>